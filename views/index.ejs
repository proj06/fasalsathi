<script>
const cropDB = {
  wheat:{yield:45, price:2275, cost:5000, risk:"Low", riskVal:20},
  rice:{yield:38, price:2200, cost:6000, risk:"Medium", riskVal:50},
  mustard:{yield:12, price:5450, cost:4500, risk:"Medium", riskVal:55}
};

const marketDB = {
  wheat:{price:2275, trend:"up"},
  rice:{price:2150, trend:"down"},
  mustard:{price:5400, trend:"up"}
};

function analyzeCrop(){
  const ph = Number(document.getElementById("ph").value);
  const land = Number(document.getElementById("land").value);

  let crop;
  if(ph > 7.5) crop = "mustard";
  else if(ph < 6.5) crop = "rice";
  else crop = "wheat";

  const data = cropDB[crop];
  const yieldTotal = data.yield * land;
  const revenue = yieldTotal * data.price;
  const profit = revenue - (data.cost * land);

  document.getElementById("bestCrop").innerText = crop.toUpperCase();
  document.getElementById("expYield").innerText = yieldTotal+" quintals";
  document.getElementById("profit").innerText = "â‚¹"+profit.toLocaleString("en-IN");
  document.getElementById("riskText").innerText = data.risk;
  document.getElementById("riskBar").style.width = data.riskVal+"%";
}

function calcProfit(){
  const land = Number(document.getElementById("pland").value);
  const seed = Number(document.getElementById("seed").value);
  const fert = Number(document.getElementById("fert").value);
  const lab = Number(document.getElementById("lab").value);
  const crop = document.getElementById("pcrop").value;

  const data = cropDB[crop];
  const cost = (seed+fert+lab)*land;
  const yieldTotal = data.yield*land;
  const income = yieldTotal*data.price;
  const profit = income - cost;

  document.getElementById("pyield").innerText = yieldTotal+" quintals";
  document.getElementById("pincome").innerText = "â‚¹"+income.toLocaleString("en-IN");
  document.getElementById("pprofit").innerText = "â‚¹"+profit.toLocaleString("en-IN");
}

function loadWeather(){
  const alerts = [
    "Heavy rain expected in 3 days â€“ avoid sowing now",
    "High temperature expected â€“ increase irrigation",
    "Storm alert â€“ protect crops"
  ];
  document.getElementById("weatherAlert").innerText = alerts[Math.floor(Math.random()*alerts.length)];
}

function loadMarket(){
  let html = "";
  for(let crop in marketDB){
    const c = marketDB[crop];
    html += `<p>${crop.toUpperCase()}: â‚¹${c.price} ${c.trend=="up"?"â¬†":"â¬‡"}</p>`;
  }
  document.getElementById("marketData").innerHTML = html;
}

loadWeather();
loadMarket();
</script>

